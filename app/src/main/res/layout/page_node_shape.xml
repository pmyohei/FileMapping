<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_circle"
                    android:layout_width="@dimen/node_shape_sample_size"
                    android:layout_height="@dimen/node_shape_sample_size"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_node_shape_24" />

                <ImageView
                    android:id="@+id/iv_square"
                    android:layout_width="@dimen/node_shape_sample_size"
                    android:layout_height="@dimen/node_shape_sample_size"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_node_square_24" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>