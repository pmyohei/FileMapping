<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/design_bottom_sheet_top_padding"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:src="@drawable/baseline_node_shape_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_square"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_square"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:src="@drawable/baseline_node_square_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_circle"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>