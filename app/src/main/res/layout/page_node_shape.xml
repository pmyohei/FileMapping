<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shapeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:text="@string/tab_shape"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


            <ImageView
                android:id="@+id/iv_circle"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="16dp"
                android:src="@drawable/baseline_node_shape_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_square"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_shapeTitle" />

            <ImageView
                android:id="@+id/iv_square"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="16dp"
                android:src="@drawable/baseline_node_square_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_circle"
                app:layout_constraintTop_toBottomOf="@+id/tv_shapeTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>