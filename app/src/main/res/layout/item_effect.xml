<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mcv_effectItem"
    android:layout_width="@dimen/effect_item_size"
    android:layout_height="@dimen/effect_item_size"
    android:layout_margin="12dp"
    android:gravity="center"
    android:theme="@style/Theme.MaterialComponents.Light"
    app:cardCornerRadius="@dimen/effect_item_half_size"
    app:cardElevation="4dp"
    >

    <ImageView
        android:id="@+id/iv_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/hb1"/>

</com.google.android.material.card.MaterialCardView>
