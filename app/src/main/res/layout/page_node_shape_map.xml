<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/tv_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/shape_common"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <!-- 1行目 -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_circle"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_squareRounded"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_common"
                app:shapeAppearanceOverlay="@style/circle"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_squareRounded"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_circle"
                app:layout_constraintTop_toBottomOf="@+id/tv_common"
                app:shapeAppearanceOverlay="@style/squareRounded"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

            <TextView
                android:id="@+id/tv_picureNodeOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/shape_pictureNodeOnly"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_circle"
                />

            <!-- 2行目 -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_square"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_octagon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_picureNodeOnly"
                app:shapeAppearanceOverlay="@style/square"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_octagon"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_octagonRounded"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_square"
                app:layout_constraintTop_toBottomOf="@+id/tv_picureNodeOnly"
                app:shapeAppearanceOverlay="@style/octagon"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_octagonRounded"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_octagon"
                app:layout_constraintTop_toBottomOf="@+id/tv_picureNodeOnly"
                app:shapeAppearanceOverlay="@style/octagonRounded"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

            <!-- 3行目 -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_dia"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_diaSemi"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_square"
                app:shapeAppearanceOverlay="@style/dia"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="141dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_diaSemi"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toStartOf="@+id/iv_circleLittle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_dia"
                app:layout_constraintTop_toBottomOf="@+id/iv_square"
                app:shapeAppearanceOverlay="@style/diaSemi"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="141dp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_circleLittle"
                android:layout_width="@dimen/node_shape_sample_size"
                android:layout_height="@dimen/node_shape_sample_size"
                android:layout_marginTop="20dp"
                android:padding="2dp"
                android:src="@drawable/baseline_node_shape_empty_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_diaSemi"
                app:layout_constraintTop_toBottomOf="@+id/iv_square"
                app:shapeAppearanceOverlay="@style/circleLittle"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                tools:layout_editor_absoluteY="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>