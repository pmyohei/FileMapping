        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:hint="@string/node_nameHint"
        android:maxLength="16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titleRootNode" />
-->


    <Button
        android:id="@+id/bt_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/node_createButtom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mapName" />

    <Button
        android:id="@+id/bt_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/node_cancelButtom"
        app:layout_constraintStart_toEndOf="@+id/bt_create"
        app:layout_constraintTop_toBottomOf="@+id/et_mapName" />


</androidx.constraintlayout.widget.ConstraintLayout>