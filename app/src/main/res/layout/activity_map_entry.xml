        android:layout_marginTop="12dp"
        android:text="@string/title_nodeBackgroundColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_mapName" />

    <EditText
        android:id="@+id/et_rootNodeName"
        android:layout_width="match_parent"
