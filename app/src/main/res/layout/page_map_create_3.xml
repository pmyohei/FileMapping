<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <include
            layout="@layout/item_color_pattern2_checkable"/>

        <ImageView
            android:id="@+id/iv_generateColor"
            android:layout_width="@dimen/change_color_pattern_icon"
            android:layout_height="@dimen/change_color_pattern_icon"
            android:layout_marginEnd="24dp"
            android:padding="2dp"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/baseline_color_generate_24" />

    </FrameLayout>

    <View
        android:id="@+id/v_checkColor"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="@color/gray"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_colorHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:paddingBottom="60dp" />

</LinearLayout>


