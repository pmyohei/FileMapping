<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_toolIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!--  中心用（アンカーの設定対象としてのみ使用）  -->
    <View
        android:id="@+id/v_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--  ツールアイコン  -->
    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_createNode"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="30"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_24" />


    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_createPictureNode"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_a_photo_24" />


    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_edit"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="90"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_edit_24" />


    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_delete"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/baseline_delete_24" />


    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_displayAllPicture"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="150"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_photo_library_24" />

    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_changeParent"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="180"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_restart_alt_24" />

    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_newMap"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="210"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_menu_book_24" />

    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_addPhoto"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_add_photo_library_24" />

    <ImageButton
        style="@style/tool_icon"
        android:id="@+id/ib_close"
        android:background="@drawable/circle_tool_icon"
        app:layout_constraintCircle="@id/v_center"
        app:layout_constraintCircleAngle="270"
        app:layout_constraintCircleRadius="@dimen/node_icon_default_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_close_24" />

</androidx.constraintlayout.widget.ConstraintLayout>