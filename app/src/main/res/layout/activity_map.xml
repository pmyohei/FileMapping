<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <!--  マップ画面全体  -->
    <FrameLayout
        android:id="@+id/fl_screenMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MapActivity">

        <!--  ツールバー  -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_gravity="top"
            android:background="@android:color/transparent"
            android:theme="@style/Toolbar.NoActionBar"
            app:menu="@menu/toolbar_map">

            <TextView
                android:id="@+id/tv_mapName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </androidx.appcompat.widget.Toolbar>

        <!--  マップ全体  -->
        <FrameLayout
            android:id="@+id/fl_map"
            android:layout_width="@dimen/map_max_size"
            android:layout_height="@dimen/map_max_size"
            android:layout_gravity="center"
            tools:context=".MapActivity">

            <!-- ルートノード -->
            <com.mapping.filemapping.RootNodeView
                android:id="@+id/v_rootnode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>

            <!--  距離参照用  -->
            <View
                android:id="@+id/v_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:visibility="invisible"/>

<!--            <com.mapping.filemapping.ToolIconsView
                android:id="@+id/toolIconsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>-->

        </FrameLayout>

        <!--  BottomSheet（デザイン設定画面用）  -->
<!--
        <include
            android:id="@+id/l_bottomSheet"
            layout="@layout/design_bottom_sheet" />
-->

        <com.mapping.filemapping.DesignBottomSheet
            android:id="@+id/dbs_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>
<!--

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <include layout="@layout/design_bottom_sheet" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

-->
    </FrameLayout>

    <!--  ナビゲーションビュー  -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/clear"
        android:fitsSystemWindows="true"
        android:isScrollContainer="true"
        app:insetForeground="@color/little_transparent">

        <include
            layout="@layout/hierarchy_node" />

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>