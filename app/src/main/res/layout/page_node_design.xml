<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titleNodeDesign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:text="ノードデザイン"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent" />

            <!-- 背景色 -->
            <TextView
                android:id="@+id/tv_titleNodeBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="@string/title_nodeBackgroundColor"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeDesign" />

            <TextView
                android:id="@+id/tv_bgColorCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Code"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />

            <TextView
                android:id="@+id/tv_bgColorGraphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Graphic"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_bgColorCode"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />


            <LinearLayout
                android:id="@+id/ll_nodeSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/title_nodeSize"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeTextColor" />

                <SeekBar
                    android:id="@+id/sb_nodeSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:paddingStart="32dp"
                    android:paddingEnd="32dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:text="@string/title_nodeShape"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_circle"
                    android:layout_width="@dimen/node_shape_sample_size"
                    android:layout_height="@dimen/node_shape_sample_size"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_node_shape_24" />

                <ImageView
                    android:id="@+id/iv_square"
                    android:layout_width="@dimen/node_shape_sample_size"
                    android:layout_height="@dimen/node_shape_sample_size"
                    android:layout_margin="16dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_node_square_24" />

            </LinearLayout>

            <!-- ノード枠色 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="ノードの枠線の色"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeDesign" />

            <TextView
                android:id="@+id/tv_borderColorCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Code"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />

            <TextView
                android:id="@+id/tv_borderColorGraphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Graphic"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_bgColorCode"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />

            <!--  ノード境界線サイズ  -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="ノードの枠線のサイズ"
                android:textColor="@color/black" />

            <RadioGroup
                android:id="@+id/rg_borderSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">

                <RadioButton
                    android:id="@+id/size1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="1" />

                <RadioButton
                    android:id="@+id/size2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2" />

                <RadioButton
                    android:id="@+id/size3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3" />

                <RadioButton
                    android:id="@+id/size4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="4" />

                <RadioButton
                    android:id="@+id/size5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5" />
            </RadioGroup>

            <!-- ノード影色 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="影の色"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeDesign" />

            <TextView
                android:id="@+id/tv_shadowColorCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Code"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />

            <TextView
                android:id="@+id/tv_shadowColorGraphic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:padding="8dp"
                android:elevation="4dp"
                android:background="@drawable/bt_create"
                android:text="Graphic"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/tv_bgColorCode"
                app:layout_constraintTop_toBottomOf="@+id/tv_titleNodeBackground" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>