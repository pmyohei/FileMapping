<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  ツールバー  -->
    <!--  アクションバーなしのスタイルをカスタム  -->
    <style name="Toolbar.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  フォントを適用  -->
        <!--  ※toolbar配下のテキストに適用させる（ツールバーのタイトルには適用されないため注意） -->
        <item name="android:typeface">serif</item>
    </style>


    <!--  ピクチャノード（円形）  -->
    <style name="circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--  ピクチャノード（まあまあ円形）  -->
    <style name="circleLittle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">42%</item>
    </style>
    <!--  ピクチャノード（角丸）  -->
    <style name="squareRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>
    <!--  ピクチャノード（四角）  -->
    <style name="square" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0%</item>
    </style>
    <!--  ピクチャノード（八角形）  -->
    <style name="octagon" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">33%</item>
    </style>
    <!--  ピクチャノード（八角形）  -->
    <style name="octagonRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">33%</item>
    </style>
    <!--  ピクチャノード（ダイア）  -->
    <style name="dia" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">50%</item>
    </style>
    <!--  ピクチャノード（ダイア（セミ））  -->
    <style name="diaSemi" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">46%</item>
    </style>


    <!--  RGB・カラーピッカー用  -->
    <style name="color_selecter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/frame_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  ツールアイコン用  -->
    <style name="tool_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:elevation">@dimen/node_toolIcon_elevation</item>
    </style>

    <!--  カラーパターン用  -->
    <style name="color_pattern_item">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!--  タブレイアウト用  -->
    <style name="tab_font_serif" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  トグルボタン用  -->
    <style name="toggle" parent="Theme.AppCompat.Light">
        <!--ボタンON時のボタンの通り道・ボタンとタッチフィードバックカラー-->
        <item name="colorControlActivated">@color/black</item>
        <!--ボタンOFF時のボタンの通り道-->
        <item name="android:colorForeground">@color/transparent_50_black</item>
        <!-- OFFボタンを押したときのタッチフィードバックカラー -->
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.FileMapping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>