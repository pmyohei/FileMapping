<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  ツールバー  -->
    <!--  アクションバーなしのスタイルをカスタム  -->
    <style name="Toolbar.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  アプリ全体にフォントを適用  -->
        <item name="android:typeface">serif</item>
    </style>
    <!--  ※デフォルトの文字サイズは20dp(abc_text_size_title_material_toolbar)  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <!--  RGB・カラーピッカー用  -->
    <style name="color_selecter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">8dp</item>
        <item name="android:background">@drawable/frame_color</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  ツールアイコン用  -->
    <style name="tool_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:elevation">@dimen/node_toolIcon_elevation</item>
    </style>

    <!--  カラーパターン用  -->
    <style name="color_pattern_item">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!--  タブレイアウト用  -->
    <style name="tab_font_serif" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
    </style>







    <!-- Base application theme. -->
    <style name="Theme.FileMapping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>